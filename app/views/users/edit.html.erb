<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:</br>
  <% @user.errors.full_messages_for(:name).each do |message| %>
    <%= message %></br>
  <% end %>
  <% @user.errors.full_messages_for(:introduction).each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <label for="inputName">Name</label></br>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></br>
  <label for="inputImage">Image</label></br>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></br>
  <label for="inputIntroduction">Introduction</label></br>
  <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介"%></br>
  <%= f.submit "Update User" %>
<% end %>