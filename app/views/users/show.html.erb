<%= render 'users/info', user: @user, book: @book %>
<div class="col-md-8 offset-md-1 py-3">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>


        <tbody>
        <% @books.each do |book| %>
          <tr>
            <th><%= link_to (attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "40x40"), user_path(book.user.id) %></th>
            <th><%= link_to book.title, book_path(book.id) %></th>
            <th><%= book.body %></th>
            <th></th>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>